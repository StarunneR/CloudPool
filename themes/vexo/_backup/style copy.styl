@font-face
  font-family: 'SourceSerif4'
  font-style: normal
  src: url('//lc-q6XNecnT.cn-e1.lcfile.com/S83f8qmf1eb8PzfvYRKCw8R6Vfv5RKfS/SourceSansPro-Regular.ttf.woff2') format('woff2') /* Super Modern Browsers */
