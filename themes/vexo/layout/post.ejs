<div id="article-banner">
  <h2><%- page.title %></h2>
  <p class="post-date">
    <% if (page.date) { %> <%- date(page.date, "YYYY-MM-DD") %> <% } %>
  </p>
</div>
<% if (page.catalog == true) { %> <%- partial('_post/catalog') %> <% } %>
<main class="app-body flex-box">
  <!-- Article START -->
  <article class="post-article">
    
    <label for="font-select">更换字体：</label>
    <select name="font" id="font">
      <option value="inherit">默认(Adobe思源黑体)</option>
      <option value="'Noto Sans SC'">Google思源黑体</option>
      <option value="'Microsoft YaHei'">微软雅黑</option>
      <option value="'Noto Serif SC'">Google思源宋体</option>
      <option value="'SimSun'">新宋体</option>      
      <option value="'KaiTi'">楷体</option>
    </select>

    <h1 class="article-author">
      <% if (page.author !== "m1") { %>
          <%- page.author %>
      <% } else if (page.author == "m1") { %>
          StarunneR
      <% } %>
    </h1>

    <section
      class="markdown-content" id="content"
      style="font-family: <%- page.font %>; text-indent: <%- page.indent %>">
      <%- page.content %>
    </section>
    <% if (page.tags && page.tags.length) { %>
      <div class="tags">
        <span>标签：</span>
        <%- partial('_partial/tag', { tags: page.tags }) %>
      </div>
    <% } %> 
    <%- partial('_post/nav') %>
    <% if (theme.post.ad == true && page.ad != false) { %>
      <%- partial('_post/ad') %>
    <% } %>
    <% if (theme.post.comment == true && page.comment != false) { %>
      <%- partial('_plugin/waline') %>
    <% } %>
    <% if (theme.post.reward == true && page.reward == true) { %>
      <%- partial('_post/reward') %>
    <% } %>
    <% if (theme.post.comment == true && page.qrcode != false) { %>
      <%- partial('_post/qrcode') %>
    <% } %>
  </article>
  <!-- Article END -->
</main>

<%- partial('_partial/banner') %>
<%- partial('_partial/title_hider') %>

<script>
  // error image
  $(".markdown-content img").on("error", function () {
    $(this).attr("src", "/images/error.png");
    $(this).css({
      cursor: "default",
    });
  });
</script>

<script>    
$(document).ready(function(){
  $("#font").click(function(){
    $(".markdown-content").css({"font-family": font.value});
  });
});
</script> 
