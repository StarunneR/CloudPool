.header
  background: none
  border: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  z-index: 200
  transition: background .5s

.fixed-header
  position: fixed
  background-color: rgba(255, 255, 255, 0.98)
  box-shadow: 0 0 3px rgba(14, 14, 14, .26)
  .home-link
    color: color-primary
  .menu .icon-bar
    background-color: color-gray
  .item-link
    color: color-dark !important

.header-container
  max-width: 1200px
  height: 40px
  margin: auto;
  padding: 10px 40px
  position: relative
  font-family: Tahoma, Verdana, Segoe, PingFang SC,Microsoft YaHei,Source Han Sans SC,Noto Sans CJK SC,WenQuanYi Micro Hei,sans-serif
  @media m-mobile
    padding: 0.5em 1em
    position: relative
.home-link
  display: inline-block
  margin: auto
  font-weight: 500
  font-size: 1.5em
  color: color-white
  .logo
    float: left
    margin-right: 8px
    max-height: 1.5em
  .eng_mark
    text-shadow: 1px 1px 2px color-vary
    margin-right: 2px
  .chn_mark
    background-color: color-primary
    border-radius: 15%

.right-list
  list-style: none
  float: right
  padding: 0
  @media m-mobile
    display: none
  .list-item
    display: inline-block
    margin: 0 8px
    .item-link
      height: 40px
      line-height: 40px
      text-decoration: none
      color: color-white
      padding-bottom: 3px
      &:hover
        font-weight: bold

.active
  font-weight: bold
  border-bottom: 3px solid color-primary

.menu
  display: none
  float: right
  width: 24px
  height: 24px
  margin-top: 10px
  .icon-bar
    display: block
    width: 24px
    height: 2.5px
    border-radius: 1px
    margin-top: 4px
    background-color: color-white
  @media m-mobile
    display: block

.menu-mask
  display: none
  position: fixed
  left: 0
  top: 52px
  z-index: 99
  width: 100%
  overflow: hidden
  max-height: 0
  background: rgba(255,255,255,0.98)
  -webkit-transition: max-height .2s ease
  transition: max-height .2s ease
  @media m-mobile
    display: block
  .menu-list
    padding: 0
    .menu-item
      position: relative
      list-style: none
      text-align: center
      padding: 10px 0
      &:after
        content: ''
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        border-bottom: 1px solid color-border
        -webkit-transform: scaleY(0.5)
        transform: scaleY(0.5)
      .menu-link
        text-decoration: none
        color: color-gray

.open
  max-height: 1000px
  transition-delay: .1s

.mobile-active
  color: color-adja3 !important
  font-weight: bold

header:hover .chn_mark
  color:white
.nomask
  color:white
