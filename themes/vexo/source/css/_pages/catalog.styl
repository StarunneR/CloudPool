.catalog-container
  display: block
  flex-basis: 150px
  -webkit-flex-basis: 150px
  flex-shrink: 0
  -webkit-flex-shrink: 0
  @media m-mobile
    display: none
  @media m-pad
    display: none
  .toc-main
    padding-left: 20px
    border-left: 1px solid color-border
    width: 160px
    box-sizing: border-box
    position: absolute
    top: 260px
    .toc-title
      font-size: 1.2em
      position: relative
      padding-left: 28px
      &:before
        content: ''
        position: absolute
        width: 22px
        height: 22px
        left: 0
        top: 2px
        background: url(catalog-url) no-repeat
        background-size: contain
    .toc-nav
      padding: 0
      margin-top: 1em
      margin-right: 0.2 em
      overflow-y: scroll
      scrollbar-width: thin
      max-height: 600px
    ol
      padding-left: 8px
    li
      list-style-type: none
      line-height: 1.5
  .fixed-toc
    position: fixed
    top: 70px

