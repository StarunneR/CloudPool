#tag-cloud
  margin: 40px 0 30px 0
  text-align: center
  a
    border: none
    line-height: 28px
    margin: 0 4px
    margin-bottom: 8px
    background: #bbe
    display: inline-block
    border-radius: 4px
    padding: 0 10px
    color: color-white
    transition: background .5s
    &:hover
      background: rgb(0, 133, 161)
  .tag0
    background: color-adja
  .tag1
    background: color-adja2
  .tag2
    background: color-adja3
  .tag3
    background: color-adja4
.tag-list
  margin-left: 2em
  margin-right: 2em
  .tag-name
    font-size: 1.5em
    position: relative
    &:before
      display: flex
      align-items: center
      justify-content: center
      //Best Way to set verticle align center
      content: "#"
      color: color-primary
      position: absolute;
      left: -0.7em
      font-weight: 700
  .tag-preview
    font-size: 1.1em
    padding-left: 1em
    li
      cursor: pointer
      margin: 10px 0

.post-tags
  span
    &:first-child
      margin-right: 10px
      font-weight: 600
  .tag-code
    font-family: 'Noto Sans SC', sans-serif
    font-size: .8em
    display: inline-block
    background-color: color-background
    color: color-contrast2
    padding: 3px 5px
    margin: 0 2px 5px 0
    border-radius: 2px
    white-space: nowrap
