.one
  margin: 10px 0 20px 0
  color: color-white
  opacity: 0
  transform: translateY(-20px)
  transition: all 0.4s
  transition-delay: 0.1s

.one_text
  font-size: 3em
  color: color-white
  font-family: 'Long Cang', 'Noto Serif SC', "STFangsong", "FangSong", "FangSong_GB2312"
  &:before
    content: "『"
    padding-right: 0.5em 
  &:after
    content: "』"
    padding-left: 0.5em 
    
.one_source
  display: inline-block
  margin-left: 30%
  margin-top: 1em
  line-height: 1.5em
  font-family: 'Source Serif 4', serif;
  font-size: 1.5em
  color: color-white


.refresh_button
  vertical-align: middle
  margin: auto 0.5em
  width: 0.9em
  height: 0.9em