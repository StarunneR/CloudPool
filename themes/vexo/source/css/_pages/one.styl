@media (any-hover: hover)
  .one_buttons img:hover
    transform: scale(1.1)

.one
  margin: 10px 0 20px 0
  color: color-white
  opacity: 0
  transform: translateY(-20px)
  transition: all 0.4s
  transition-delay: 0.1s
  //backdrop-filter: blur(10px)
  //border-radius: 25%
  .one_main
    align-items: center;
    display: flex;
    justify-content: center;
    .one_text
      font-size: 3em
      color: color-light
      font-family: "Long Cang", "STFangsong", "FangSong", "FangSong_GB2312"
      &:before
        content: "『"
        padding-right: 0.5em 
        font-size: 0.5em
      &:after
        content: "』"
        padding-left: 0.5em 
        font-size: 0.5em
  .one_source
    display: inline-block
    text-align: left
    font-family: 'Noto Serif SC', serif
    font-weight: 200
    font-size: 1.5em
    color: color-light
    margin: 1em auto auto 25%
    line-height: 1.5em
    .one_buttons
      display: inline-table
      vertical-align: middle
      cursor: pointer
      margin-left: 1em
      img 
        height: 1.2em
        padding: 0 4px
        &:active
          transform: scale(0.9)
          -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

