.one
  margin: 10px 0 20px 0
  color: color-white
  opacity: 0
  transform: translateY(-20px)
  transition: all 0.4s
  transition-delay: 0.1s

.one_text
  font-size: 2.5em
  color: color-white
  font-family: "STFangsong", "FangSong", sans-serif
  &:before
    content: "『"
  &:after
    content: "』"
    
.one_source
  font-family: "NSimSun", "SimSun", sans-serif
  font-size: 1.5em
  color: color-white
  text-indent: 30%
  margin-top: 1em
  line-height: 1.5em

.refresh_button
  border: none
  border-radius: 100px