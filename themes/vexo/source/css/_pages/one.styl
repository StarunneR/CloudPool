.one
  margin: 10px 0 20px 0
  color: color-white
  opacity: 0
  transform: translateY(-20px)
  transition: all 0.4s
  transition-delay: 0.1s
  &:before
    content: "『"
  &:after
    content: "』"

.one_text
  font-size: 2.5em
  color: color-white
  font-family: "STFangsong", "FangSong", sans-serif

.one_source
  font-family: "NSimSun", "SimSun", sans-serif
  transform: translateY(-20px)
  transition: all 0.4s ease 0.3s
  font-size: 1.5em
  color: color-white
