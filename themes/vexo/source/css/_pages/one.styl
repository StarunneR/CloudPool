  font-display: swap

.one
  margin: 10px 0 20px 0
  color: color-white
  opacity: 0
  transform: translateY(-20px)
  transition: all 0.4s
  transition-delay: 0.1s

.one_text
  font-size: 2.5em
  color: color-white
  font-family: "STFangsong", "FangSong", "FangSong_GB2312", sans-serif
  &:before
    content: "『 "
  &:after
    content: " 』"
    
.one_source
  display: inline-block
  margin-left: 30%
  margin-top: 1em
  line-height: 1.5em
  font-family: 'SourceSerif4', "STSong", "NSimSun", "SimSun", sans-serif
  font-size: 1.5em
  color: color-white


.refresh_button
  vertical-align: middle
  margin: auto 0.5em
  width: 0.9em
  height: 0.9em