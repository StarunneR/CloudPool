#article-banner
  width: 100%
  box-sizing: border-box
  top: 0
  left: 0
  padding: 80px 20px 25px 20px
  font-family: sans-serif, system-ui, -apple-system, Arial, 'Helvetica Neue'
  text-align: center
  position: relative
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  @media m-mobile
    padding: 80px 10px 25px 10px
  .page-title
    margin: .4em 0
    font-size: 2em
    color: color-white
    text-shadow: 0 0 20px color-lighter
    opacity: 0
    transform: translateY(10px)
    transition: all 0.5s
    @media m-mobile
      font-size: 2em
  .page-subtitle
    margin: 10px 0 20px 0
    color: color-white3
    opacity: 0
    transform: translateY(10px)
    transition: all 1s
    transition-delay: 0.2s
  .post-title
    margin: .4em 0
    font-size: 2em
    color: color-white2
    opacity: 0
    transform: translateY(-20px)
    transition: all 0.4s
    @media m-mobile
      font-size: 2em
  .post-subtitle
    font-weight: normal
    margin: 1.2em 0 20px 0
    color: color-white
    opacity: 0
    transform: translateY(-20px)
    transition: all 0.4s
    transition-delay: 0.2s
  .post-date
    margin: 10px 0 20px 0
    color: color-white
    opacity: 0
    transform: translateY(-20px)
    transition: all 0.4s
    transition-delay: 0.2s
  .arrow-down
    display: flex
    width: 100%
    justify-content: center
    opacity: 0
    transform: translateY(-20px)
    transition: all 0.4s
    transition-delay: 0.2s
    a
      z-index: 4
      display: block
      width: 25px
      height: 25px
      -webkit-transform: rotate(315deg)
      transform: rotate(315deg)
      -webkit-animation-name: shine
      -webkit-animation-duration: 3s
      -webkit-animation-iteration-count: infinite
      animation-name: shine
      animation-duration: 3s
      animation-iteration-count: infinite
      animation-timing-function: ease-in-out
      border-bottom: 1px solid color-white
      border-left: 1px solid color-white

.post-article
  position: relative
  width: 100%
  .front-parent
    display: flex
    align-items: center
    flex-flow: row wrap
    .front-child
      margin-top: 1em
      flex: fit-content
      .front-label
        font-family: initial
        font-weight: bold
        // border-style: dotted
      #fontsize-slider, #fontsize-value
        vertical-align: middle
  .article-author
    font-family: 'Calibri', 'Helvetica Neue', sans-serif, 'Arial'
    font-size: 1.5em
    font-weight: bold
    color: grey
    .authorlogo
      width: 1.4em
      border-radius: 100%
  // Markdown CSS
  .markdown-content
    overflow-y: auto
    overflow-x: hidden
    font-family: Arial, Helvetica, sans-serif, "MS PGothic"
    pre, code
      font-family: 'Roboto Mono', Monaco, courier, monospace
      font-size: 13px
      scrollbar-width: thin
      @media m-mobile
        font-size: 12px
      .line
        min-height: 13px
        margin: 2px 0
    img
      width: 40vmax
    p
      line-height: 1.6em
      margin-bottom: .7em
      code
        background-color: color-background
        color: color-dark
        padding: 3px 5px
        margin: 0 2px
        border-radius: 2px
        white-space: nowrap
    h1
      font-size: 2.5em
      padding: 1em 0 0 0
      border-bottom: 2px solid color-contrast2
      &::first-letter
        text-transform: capitalize
    h2
      font-size: 1.8em
      background: linear-gradient( 90deg, rgba(125, 249, 255, 0.6) , rgba(255, 255, 255, 0.6))
      border-left:20px color-vary2 solid
      color: #444
      line-height: 28px
      padding: 15px 0px 15px 20px
      &::first-letter
        text-transform: capitalize
    h3
      padding: 1em 0
      color: color-dark
      font-size: 1.5em
      padding: 10px 0px 10px 10px
      border-bottom: 1px solid color-border
      border-left: 12px color-adja6 solid
      &:before
        background: linear-gradient( 90deg, rgba(246, 114, 128, 0.6) , rgba(255, 255, 255, 0.6))
        color: color-darker
        margin-right: 5px
        //font-size: 1.2em
        font-weight: 700
    h4
      padding: 1em 0
      font-size: 1.4em
      &:before
        content: "#";
        color: color-darker
        margin-right: 5px
        font-weight: 700
    h5
      font-size: 1.2em
    h6
      font-size: 1.0em
    a
      &:hover
        color: color-contrast2
    blockquote
      margin: 1em 0
      padding: 15px 20px
      border-left: 4px solid color-primary
      background: color-background
      border-bottom-right-radius: 2px
      border-top-right-radius: 2px
    ul, ol
      overflow: auto
      margin: 15px 0
      li
        padding: 5px 0
    .small-img
      display: inline
      margin: 0px auto
    .profile
      display: inline
      margin: 0px auto
      height: 32px
      width: 32px
      border-radius: 100%
    img
      max-width: 100%
      display: block
      margin: 20px auto
      cursor: zoom-in
    figure
      background: color-background
      padding: 0 10px
      border-radius: 2px
      margin: 20px 0
      overflow: auto
      position: relative
      &:after
        content: attr(data-lang)
        position: absolute
        top: 0
        right: 0
        color: #ccc
        text-align: right
        font-size: 0.7em
        padding: 5px 10px 0
        line-height: 15px
        height: 15px
        font-weight: 500
    > table
      width 100%
      @media m-mobile
        width 100%
        //display: inline-flex
        overflow: scroll
      thead
        background-color: color-primary
        border-top-width: 1px
        border-top-style: solid
        border-top-color: color-border
        th
          padding: 5px 10px
          color: color-white
      tbody
        tr
          &:nth-child(even)
            background: #e6eed6
          &:nth-child(odd)
            background: color-white
          td
            padding: 5px 10px
    hr
      border: none
      border-bottom: 1px dashed #cccccc
      margin: 30px 0
    del
      background-color: #000000
      color: #000000
      border-radius: 2px
      text-decoration: none
      a
        color: #000000
      &:hover
        transition:color .13s linear
        color: white
        a
          transition:color .13s linear
          color: lightblue
    .fold
      .fold_hider .hider_title
        font-family: initial
        width: fit-content
        font-size: 1em
        font-style: oblique
        font-weight: bold
        background-color: color-darker
        color: color-white
        border-radius: 4px
        padding-left: 2px
        padding-right: 5px
      .fold_content
        background-color: color-border
        font-family: 'Times New Roman','Noto Serif SC', serif
        font-display: swap
        font-size: smaller
    .heimu
      background-color: #000000
      color: #000000
      a
        color: #000000
      &:hover
        transition:color .13s linear
        color: white
        a
          transition:color .13s linear
          color: lightblue
  .post-tags
    margin-top: 1em
  .nav-container
    width: 100%
    padding-top: 1.5em
    margin-top: 1.5em
    border-top: 1px dashed color-border
    font-weight: 600
    &:after, &:before
      content: ''
      display: table
      clear: both
    .nav-left
      float: left
    .nav-right
      float: right
    .nav-arrow
      color: color-dark
    a
      color: color-darker
      &:hover
        color: color-contrast
  .advertisement
    font-size: 0.7em
    color: grey
    margin: 1em auto
  .qrcode
    padding-top: 20px
    padding-bottom: 20px
    text-align: center
    .qrcode-image
      width: 100px
      height: 100px
      box-shadow: 0 0 1px color-shadow
      cursor: crosshair
      background-color: color-gray3
      border-radius: 4px
    .qrcode-notice
      font-weight: bold
      font-size: 12px
      margin-top: 10px
      text-align: center
      color: color-gray
      font-style: italic
  
