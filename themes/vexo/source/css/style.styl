@import "_config"
@font-face
  font-family: 'SourceHanSansCN'
  src: url('//cdn.jsdelivr.net/npm/@librescore/fonts@0.4.1/SourceHanSansCN.min.woff2') format('woff2') /* Super Modern Browsers */
  font-display: swap
@font-face
  font-family: 'Source Serif 4 src1'
  src: url('//cdn.jsdelivr.net/npm/source-serif/TTF/SourceSerif4-Regular.ttf') format('truetype'), /* Safari, Android, iOS */
    url('//cdn.jsdelivr.net/npm/source-serif/WOFF2/TTF/SourceSerif4-Regular.ttf.woff2') format('woff2'), /* Super Modern Browsers */
    url('//cdn.jsdelivr.net/npm/source-serif/WOFF/TTF/SourceSerif4-Regular.ttf.woff') format('woff') /* Modern Browsers */
  font-display: swap
@font-face
  font-family: 'Source Serif 4 src2'
  font-style: normal
  src: url('//lc-q6XNecnT.cn-e1.lcfile.com/5ABBMHn76cNuLkCsOHFGys4gqQkc9aXs/SourceSerif4-Regular.ttf') format('truetype'), /* Safari, Android, iOS */
